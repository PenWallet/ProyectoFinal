            </Grid.RowDefinitions>
            <!-- TODO: Añadir foticos -->

            <!-- Óscar -->
            <materialDesign:Card Grid.Row="0" materialDesign:ShadowAssist.ShadowDepth="Depth4" materialDesign:ShadowAssist.ShadowEdges="All" Margin="0 10 0 0" HorizontalAlignment="Center">
