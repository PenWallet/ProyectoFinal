                    <Image Source="" Height="200" Width="200"/>
                    <TextBlock Text="Óscar" FontSize="30" FontWeight="ExtraBold"/>
                    <TextBlock Text="El que lo ha hecho to" FontSize="15" FontWeight="Medium" HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>


            <!-- Miguel -->
