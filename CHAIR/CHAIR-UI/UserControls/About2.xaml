                    <Image Source="" Height="200" Width="200"/>
                    <TextBlock Text="Olga" FontSize="30" FontWeight="ExtraBold"/>
                    <TextBlock Text="La ayudante de las cosas bonicas" FontSize="15" FontWeight="Medium" HorizontalAlignment="Center"/>
                </StackPanel>
