                    <TextBlock Text="Miguel" FontSize="30" FontWeight="ExtraBold"/>
                    <TextBlock Text="El ayudante de testing" FontSize="15" FontWeight="Medium" HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Olga -->
            <materialDesign:Card Grid.Row="1" materialDesign:ShadowAssist.ShadowDepth="Depth4" materialDesign:ShadowAssist.ShadowEdges="All" Margin="0 10 0 0" HorizontalAlignment="Center">
